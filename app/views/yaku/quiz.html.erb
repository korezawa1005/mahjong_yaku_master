<div class="max-w-2xl mx-auto mt-10 px-4 text-center">
  <h1 class="text-2xl font-bold mb-6">この役の名前はなんでしょう？</h1>

  <p class="text-gray-700 text-lg mb-8 border p-4 rounded shadow">
    <%= @correct_yaku.description %>
  </p>

  <div class="grid grid-cols-1 gap-4">
    <% @choices.each do |choice| %>
      <%= button_to choice.name, check_answer_yaku_index_path(answer_id: choice.id, correct_id: @correct_yaku.id), method: :post, data: { turbo: false }, class: "bg-white border border-gray-300 px-6 py-3 rounded hover:bg-blue-100" %>
    <% end %>
  </div>
</div>
