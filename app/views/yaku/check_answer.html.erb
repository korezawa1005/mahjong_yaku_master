<div class="max-w-xl mx-auto my-12
            bg-white/70 backdrop-blur-md
            rounded-2xl shadow-2xl px-8 py-10
            text-center space-y-8">

  <!-- クイズ進捗バッジ -->
  <span class="inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-700 font-bold">
    <%= session[:quiz_count] %> / 10
  </span>

  <!-- 正誤メッセージ -->
  <% if @is_correct %>
    <h2 class="text-3xl font-extrabold text-green-600 flex justify-center items-center gap-2">
      正解！ <span class="text-2xl">🎉</span>
    </h2>
  <% else %>
    <h2 class="text-3xl font-extrabold text-red-600 flex justify-center items-center gap-2">
      不正解 <span class="text-2xl">😢</span>
    </h2>
  <% end %>

  <!-- 役の説明をコールアウト風に -->
  <p class="relative bg-white/80 backdrop-blur-sm border-l-4 border-blue-400
            rounded-lg shadow-md p-4 text-gray-800 leading-relaxed">
    <%= @correct_yaku.description %>
  </p>

  <!-- ユーザの選択肢 -->
  <p class="text-gray-600">
    あなたの選択: <span class="font-semibold"><%= @selected_yaku.name %></span>
  </p>

  <!-- アクションボタン -->
  <div class="flex flex-col gap-4">
    <%= link_to "次の問題へ", quiz_yaku_index_path(mode: params[:mode]),
          class: "btn btn-primary btn-lg" %>

    <%= link_to "最初からやり直す", quiz_top_yaku_index_path,
          class: "btn btn-error btn-lg" %>

    <%= link_to '役一覧へ', yaku_index_path, 
          class: "btn btn-error btn-lg" %>
          
  </div>
</div>

