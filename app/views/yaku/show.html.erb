<turbo-frame id="yakus">
  <div class="block max-w-3xl mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold mb-4"><%= @yaku.name %></h1>
    <p class="text-gray-700 mb-6"><%= @yaku.description %></p>
    <p class="text-gray-500">翻数: <%= @yaku.han %>翻
      <% if @yaku.open_han.present? %>
        (<%= @yaku.open_han %>)
      <% end %>  
    </p>
    <% if @yaku.photo.present? %>
      <%= image_tag @yaku.photo, class: "block mx-auto my-4" %>
    <% end %>
  </div>
  <div class="navigation-buttons">
    <% if @prev_yaku %>
      <%= link_to "← 前へ", yaku_path(@prev_yaku), class: "btn btn-outline" %>
    <% end %>
    <% if @next_yaku %>
      <%= link_to "次へ →", yaku_path(@next_yaku), class: "btn btn-outline" %>
    <% end %>
  </div>
</turbo-frame>
